# Environment Variables
PORT=3000
NODE_ENV=development
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Security: API Key Authentication (optional - if not set, auth is disabled)
# Generate a strong key: openssl rand -base64 32
API_KEY=your_secret_api_key_here

# OpenAI API Key for AI features (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Frontend URL for CORS (default: http://localhost:5173)
FRONTEND_URL=http://localhost:5173
